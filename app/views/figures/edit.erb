<h1>Edit <%= @figure.name %></h1>
  <form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
        <label for="name">Figure's Name:</label>
        <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
        <br>
        <label>Title IDs (check all that apply): </label>
        <% Title.all.each do |title| %>
        <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
        <%= title.name %>
        <% end %>
        <br>
        <label for="title">Or Enter A New Title:</label>
        <input type="text" name="title[name]" id="new_title">
        <br>
        <label>Landmark IDs (check all that apply): </label>
        <% Landmark.all.each do |landmark| %>
        <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
        <%= landmark.name %>
        <% end %>
        <br>
        <label for="landmark">Or Enter A New Landmark:</label>
        <input type="text" name="landmark[name]" id="new_landmark">
        <br>
    <input type="submit" value="Edit Figure">
  </form>
